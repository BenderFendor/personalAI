#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR" || exit 1

# Ensure proper terminal settings for ANSI color support
export TERM="${TERM:-xterm-256color}"
export COLORTERM="${COLORTERM:-truecolor}"

VENV_ACTIVATE="/home/bender/projects/personalAI/.venv/bin/activate"
if [ -f "$VENV_ACTIVATE" ]; then
    # shellcheck disable=SC1090
    source "$VENV_ACTIVATE"
else
    echo "Warning: virtualenv activate not found at $VENV_ACTIVATE" >&2
fi

exec python main.py "$@"
